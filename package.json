{
  "name": "aoc-livestore",
  "version": "0.0.1",
  "description": "Advent of Code solution tracker with LiveStore + SolidJS",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@livestore/adapter-web": "0.3.1",
    "@livestore/livestore": "0.3.1",
    "@livestore/peer-deps": "0.3.1",
    "@livestore/solid": "0.3.1",
    "@livestore/sync-cf": "^0.3.1",
    "@livestore/wa-sqlite": "1.0.5-dev.2",
    "solid-js": "1.9.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@cloudflare/vite-plugin": "^1.19.0",
    "@livestore/devtools-vite": "^0.3.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "happy-dom": "^20.0.11",
    "solid-devtools": "^0.33.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.4",
    "vite-plugin-solid": "^2.11.6",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  },
  "engines": {
    "node": ">=23.0.0"
  }
}
