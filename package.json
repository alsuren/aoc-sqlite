{
    "name": "aoc-sqlite",
    "version": "1.0.0",
    "type": "module",
    "description": "Advent of Code solutions in SQLite running in the browser",
    "engines": {
        "bun": ">=1.0.0"
    },
    "scripts": {
        "test": "bun test src/ && playwright test",
        "test:unit": "bun test src/",
        "test:e2e": "playwright test",
        "test:ui": "playwright test --ui",
        "test:debug": "playwright test --debug",
        "serve": "npx live-server --port=8000 --no-browser",
        "serve:test": "npx live-server --port=8001 --no-browser",
        "run:puzzle": "bun src/bun-test-runner.js"
    },
    "keywords": [
        "advent-of-code",
        "sqlite",
        "wasm"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@sqlite.org/sqlite-wasm": "^3.51.1-build2"
    },
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "live-server": "^1.2.2"
    }
}
